{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
